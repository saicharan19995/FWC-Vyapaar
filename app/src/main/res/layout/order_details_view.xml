<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:visibility="visible"
        android:id="@+id/cr"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_margin="10dp"
                    android:layout_height="90dp"
                    android:id="@+id/pr_image"
                    android:src="@drawable/logo_new"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="35dp"
                        android:id="@+id/pr_name"
                        android:gravity="center"
                        android:text="@string/order_details_view_product" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:id="@+id/pr_price"
                        android:layout_height="wrap_content"
                        android:text="@string/order_details_view_price"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:id="@+id/pr_qnty"
                        android:layout_height="wrap_content"
                        android:text="@string/order_details_view_qnty"
                        />


                </LinearLayout>
                </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>